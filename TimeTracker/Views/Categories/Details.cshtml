@model LWTechTaskTimeTracker.Models.Category

@{
    ViewData["Title"] = "Edit a category";
}
<div class="btn-block">
    <h1 class="display-4">Edit Category</h1>
</div>

<hr />
<div class="row">
    <div class="col-lg-6 col-md-12">
        <img src="https://pngimage.net/wp-content/uploads/2018/05/edital-png.png" class="img-rounded" alt="Cinque Terre">

    </div>
    <div class="col-lg-4 col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
