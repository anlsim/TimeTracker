@model LWTechTaskTimeTracker.Models.CompletedTask

@{
    ViewData["Title"] = "Delete";
}

<div class="btn-block">
    <h1 class="display-4">Delete Task</h1>
</div>
<div class="row">
    <div class="col-lg-6 col-md-12">
        <img src="https://cdn0.iconfinder.com/data/icons/business-butterscotch-vol-2/512/Rejected-512.png" class="img-rounded" alt="Cinque Terre">

    </div>
    <div class="col-lg-6 col-md-12">
        <h3 class="alert alert-danger">Are you sure you want to delete this?</h3>
        <div>
            <h4>CompletedTask</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.dateTime)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.dateTime)
                </dd>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IsActive)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</div>