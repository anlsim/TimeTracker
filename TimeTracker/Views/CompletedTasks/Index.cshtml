@model IEnumerable<LWTechTaskTimeTracker.Models.CompletedTask>

@{
    ViewData["Title"] = "Tasks";
}


<div class="btn-block">
    <h1 class="display-4">Tasks to Complete</h1>
</div>
<hr>

<div class="btn-block">
    <h3>
        <a asp-action="Create"><i class="bi bi-plus-circle"></i> Add Task</a>
    </h3>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateTime)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dateTime)
                </td>             

                @if (!item.IsActive)
                {
                    <td>
                        <div >
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"> Mark Completed</a>
                        </div>
                    </td>
                }
                else if (item.IsActive)
                {
                    <td>
                        <div>
                        
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </div>
                    </td>
                }
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr>

